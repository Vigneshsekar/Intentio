<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.codebuff.intentio" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="Android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="net.codebuff.intentio.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.codebuff.intentio.preferences.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <service
            android:name="net.codebuff.intentio.IntentioService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name="net.codebuff.intentio.IntentioReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <activity
            android:name="net.codebuff.intentio.Parser_demo"
            android:label="@string/title_activity_parser" >
        </activity>
        <activity
            android:name="net.codebuff.intentio.demo"
            android:label="@string/title_activity_demo_2" >
        </activity>
        <activity
            android:name="net.codebuff.intentio.today"
            android:label="@string/title_activity_today" >
        </activity>
        <activity
            android:name="net.codebuff.intentio.week"
            android:label="@string/title_activity_week" >
        </activity>
    </application>

</manifest>
