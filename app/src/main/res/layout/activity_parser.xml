<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="net.codebuff.intentio.Parser_demo"
                android:gravity="center_horizontal">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to go to second demo screen"
        android:id="@+id/demo_2"
        android:textColor="@color/primary_material_dark"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to Parse and see the contents of file"
        android:id="@+id/parse_button"
        android:textColor="@color/primary_material_dark"
        android:layout_below="@+id/demo_2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"/>



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/parse_button"
        android:layout_alignEnd="@+id/parse_button"
        android:layout_below="@+id/parse_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/data"
            android:layout_below="@+id/parse_button"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />
    </ScrollView>

</RelativeLayout>
